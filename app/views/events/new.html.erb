<% @page_title = "New Event" %>

<div class="w-container index-title-continer">
  <div class="w-row">
    <div class="w-col w-col-9">
      <div class="index-title-div">
        <h1 class="section-heading">New Event</h1>
      </div>
    </div>
    <div class="w-col w-col-3">
      <div class="w-form">
      </div>
    </div>
  </div>
</div>
<%= form_for(:event, :html => {:multipart => true}, :url => {:action => 'create'}) do |f| %>
<div class="w-section cms-section">
  <div class="w-container cms-container">
    <div class="form-block">
      <div>
        <%= error_messages_for(@event) %>
      </div>
      <div>
        <div class="w-row form-row">
          <div class="w-col w-col-9">
            <h3>EVENT TITLE  <%= f.text_field(:title) %></h3>
            <h4>PERMALINK  <%= f.text_field(:permalink) %></h4>
            <h4>DATE &amp; TIME  <%= f.datetime_select(:event_datetime, :order => [:day, :month, :year]) %></h4>
            <h4>PRICE <%= f.number_field(:ticket_price, :step => 0.1) %></h4>
            <h4>VENUE <%= f.select(:venue_id, @venues.collect {|v| [v.venue_name, v.id]}) %>   CATEGORY  <%= f.select(:category_id, @categories.collect {|c| [c.category_title, c.id]}) %></h4>
          </div>
          <div class="w-col w-col-3">
            <h4>PUBLISHED</h4><%= f.check_box(:visible) %>
            <h4>FEATURED</h4><%= f.check_box(:featured) %>
            <h4>POSITION  <%= f.select(:position, 1..@event_count) %></h4>
          </div>
        </div>
      </div>
      <div class="w-row">
        <div class="w-col w-col-9 form-row">
          <h3>CONTENT</h3>
          <%= f.cktext_area(:content) %>
        </div>
        <div class="w-col w-col-3">
          <h3>IMAGE</h3>
        </br>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
          <div>
            <form style="float:left"><%= submit_tag("Save Event", :class => 'save-button') %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
